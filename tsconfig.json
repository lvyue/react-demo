{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "paths":{
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src"
  ]
}